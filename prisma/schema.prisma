enum Currency {
  PLN
  EUR
  USD
}

model UserRole {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  role   Role   // enum

  @@unique([userId, role]) // użytkownik nie może mieć tej samej roli dwa razy
}

enum Role {
  Admin
  Moderator
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  id      String   @id @unique @default(uuid())
  email   String   @unique
  expires DateTime

  @@unique([id, email])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model Circle {
  id   String @id @default(uuid())
  name String
  slug String

  moderatorId String
  moderator   User   @relation("Moderator", fields: [moderatorId], references: [id]) // Dodajemy relację do moderatora

  minMembers Int @default(1)
  maxMembers Int @default(10)

  street String?

  cityId String?
  city   City? @relation(fields: [cityId], references: [id])

  price Int?
  
  currency Currency?

  meetings Meeting[]
  members  Membership[]

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Meeting {
  id        String    @id @default(uuid())
  startTime DateTime
  endTime   DateTime

  street String
  status MeetingStatus
  
  cityId String
  city City @relation(fields: [cityId], references: [id])

  number Int
  
  price  Int

  currency Currency 

  circleId      String
  circle        Circle  @relation(fields: [circleId], references: [id], onDelete: Cascade)

  moderatorId String
  moderator User @relation("Moderator", fields: [moderatorId], references: [id])

  participants Participation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum MeetingStatus {
  Scheduled
  Completed
  Archived
}

model Participation {
  id         String   @id @default(uuid())
  
  membershipId String
  membership Membership @relation(fields: [membershipId], references: [id])

  meetingId  String
  meeting    Meeting @relation(fields: [meetingId], references: [id])

  status     ParticipationStatus @default(Active)
  payments  ParticipationPayment[]

  paymentDate DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([membershipId, meetingId])
}

model ParticipationPayment {
  id  String  @id @default(uuid())
  participationId String
  participation Participation @relation(fields: [participationId], references: [id], onDelete: Cascade)

  amount  Int
  currency  Currency
  stripePaymentId String?
  method PaymentMethod?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymentMethod {
  Stripe
}

enum ParticipationStatus {
  Active
  Vacation
  Cancelled
}

model Membership {
  id String @id @default(uuid())
  status MembershipStatus
  vacationDays  Int @default(2)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  circleId String
  circle   Circle  @relation(fields: [circleId], references: [id], onDelete: Cascade)

  balance MembershipBalance[]
  participations Participation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, circleId]) // Użytkownik może mieć tylko jedno zgłoszenie do danej grupy
}

enum MembershipStatus {
  Pending
  Active
  Left
  Removed
}

model Country {
  id String @id @default(uuid())
  name String @unique
  code String?
  timeZone String
  locale String

  regions Region[]
}

model Region {
  id String @id @default(uuid())
  name String
  countryId String
  country Country @relation(fields: [countryId], references: [id])

  cities City[]
}

model City {
  id String @id @default(uuid())
  name String
  regionId String
  region Region @relation(fields: [regionId], references: [id])

  circles Circle[]
  circleMeetings Meeting[]
}

model BusinessInfo {
  id        String   @id @default(cuid())
  name      String   // np. "Jan Kowalski" albo "Fundacja XYZ"
  address   String?  // adres wystawcy (opcjonalny przy osobie prywatnej)
  taxId     String?  // NIP jeśli dotyczy, null przy osobie prywatnej

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id              String   @id @default(cuid())
  
  userId          String   // klient (User.id)
  user            User  @relation(fields: [userId], references: [id])

  amount          Int      // kwota w najdrobniejszych jednostkach (np. grosze)
  
  currency        Currency   // PLN, USD itd.
  status          TransactionStatus   // np. "succeeded", "failed", "pending"
  type            TransactionType
  paymentIntentId String?   // Stripe PaymentIntent.id
  createdAt       DateTime @default(now())

  // snapshot danych wystawcy w momencie transakcji
  businessName    String
  businessAddress String?
  businessTaxId   String?
}

enum TransactionStatus {
  Succeeded
  Failed
  Pending
  Refunded_to_wallet
  Used_from_wallet
}

enum TransactionType {
  Incoming   // wpłata od użytkownika
  Outgoing   // zwrot do portfela lub na kartę
  Internal   // operacje wewnętrzne (np. przeniesienie środków)
}