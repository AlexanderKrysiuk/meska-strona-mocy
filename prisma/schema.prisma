generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  password      String?
  image         String?
  title         String?
  description   String?
  slug          String? @unique

  stripeAccountId String?

  stripeCustomerId String?
  subscriptionEndsAt DateTime?

  transactions  Transaction[]
  roles           UserRole[]       // relacja do tabeli ról użytkownika
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  moderatedCircles Circle[]        @relation("Moderator") // Użytkownik może moderować wiele grup

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  
  memberships Membership[]

  moderatedMeetings Meeting[] @relation("Moderator")
}

model MembershipBalance {
  id String @id @default(uuid())
  membershipId String
  membership Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  amount Int
  currency Currency
  stripePaymentId String?
  method PaymentMethod?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Subscription {
  id  String  @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  subscriptionKey String
  period SubscriptionPeriod
  endsAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, subscriptionKey])
}

enum SubscriptionPeriod {
  Monthly
  Yearly
}



